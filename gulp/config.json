{
  "root": {
    "src": "./src",
    "dest": "./dest",
    "tmp": "./.tmp",
    "mock": "./mock"
  },

  "tasks": {
    "server": {
      "port": 8000
    },

    "static": {
      "src": "static",
      "dest": "./"
    },

    "scripts": {
      "src": "js",
      "dest": "js",
      "entries": {
        "app": ["./app.js"]
      },
      "extensions": ["js", "json"],
      "babel": {
        "presets": ["es2015", "stage-1"],
        "plugins": []
      },
      "extractSharedJs": false
    },
    "css": {
      "src": "css",
      "dest": "css",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "indentedSyntax": true,
        "includePaths": [
          "./node_modules/normalize.css"
        ]
      },
      "extensions": ["sass", "scss", "css"]
    },

    "ftl": {
      "src": "pagedata",
      "viewRoot": "template",
      "dest": "www",
      "extensions": ["json"]
    },

    "rev": {
      "src": "dest",
      "dest": "dest",
      "prefix": "",
      "dontRenameFile": [".html", ".php", ".ftl"]
    },

    "html": {
      "src": "html",
      "dest": "./",
      "dataFile": "data/global.json",
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["html", "json"],
      "excludeFolders": ["layouts", "shared", "macros", "data"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "iconFont": {
      "src": "icons",
      "dest": "fonts",
      "sassDest": "generated",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgSprite": {
      "src": "icons",
      "dest": "images",
      "extensions": ["svg"]
    },

    "production": {
      "rev": true,
      "server": false
    }
  }
}
